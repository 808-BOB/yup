{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./starter-app/apps/web/*"],
      "@/components/*": ["./starter-app/packages/ui/*"],
      "@/utils/*": ["./starter-app/packages/utils/*"],
      "@/types/*": ["./starter-app/packages/types/*"]
    },
    "typeRoots": ["./starter-app/node_modules/@types"]
  },
  "include": ["starter-app/**/*"],
  "references": [{ "path": "./starter-app/apps/web" }]
} 